<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trivia!</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/trivia.css" />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1"
          ><%-player1Name %> vs. <%-player2Name%>!</span
        >
      </div>
    </nav>
    <h1 class="text-center mt-5">Trivia!</h1>

    <input
      type="hidden"
      id="questions"
      value="<%= JSON.stringify(questions) %>"
    />

    <div class="container">
      <div class="row mt-3">
        <div class="col-12 col-sm-6 d-flex justify-content-center">
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title" id="player1Name"><%- player1Name %></h5>
              <p class="card-text">Score: <span id="player1Score">0</span></p>
              <div class="row">
                <div class="col-6">
                  <button
                    class="btn btn-outline-dark w-100"
                    id="player1Decrement"
                  >
                    -
                  </button>
                </div>
                <div class="col-6">
                  <button
                    class="btn btn-outline-dark w-100"
                    id="player1Increment"
                  >
                    +
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 d-flex justify-content-center">
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title" id="player2Name"><%- player2Name %></h5>
              <p class="card-text">Score: <span id="player2Score">0</span></p>
              <div class="row">
                <div class="col-6">
                  <button
                    class="btn btn-outline-dark w-100"
                    id="player2Decrement"
                  >
                    -
                  </button>
                </div>
                <div class="col-6">
                  <button
                    class="btn btn-outline-dark w-100"
                    id="player2Increment"
                  >
                    +
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div
        class="container d-flex align-items-center justify-content-center mt-4"
      >
        <div class="card-container">
          <div class="card-body">
            <h1 class="card-title" id="questionText">
              <%- questions[0].question %>
            </h1>
            <p class="card-text"></p>
            <ol id="answerList">
              <% questions[0].allAnswers.forEach(answer => { %>
              <li data-correct="<%- answer === questions[0].correct_answer%>">
                <%- answer %>
              </li>
              <% }); %>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row mt-3">
        <div class="col-sm-4">
          <div class="d-flex justify-content-center mt-3">
            <button id="show-answer" class="btn btn-primary w-100">
              Show Answer
            </button>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="d-flex justify-content-center mt-3">
            <button id="nextButton" class="btn btn-success w-100">
              Next Question
            </button>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="d-flex justify-content-center mt-3">
            <button id="resetButton" class="btn btn-danger w-100">
              Start Over / Reset
            </button>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
    <script src="/js/trivia.js"></script>
  </body>
</html>
