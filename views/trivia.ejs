<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trivia!</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="row mt-3">
        <div class="col-12 col-sm-6 d-flex justify-content-center">
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title" id="player1Name"><%- player1Name %></h5>
              <p class="card-text">Score: <span id="player1Score">0</span></p>
              <div class="d-flex">
                <button
                  class="btn btn-danger btn-sm me-2"
                  id="player1Decrement"
                  style="width: 30px; height: 30px"
                >
                  -
                </button>
                <button
                  class="btn btn-primary btn-sm"
                  id="player1Increment"
                  style="width: 30px; height: 30px"
                >
                  +
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 d-flex justify-content-center">
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title" id="player2Name"><%- player2Name %></h5>
              <p class="card-text">Score: <span id="player2Score">0</span></p>
              <div class="d-flex">
                <button
                  class="btn btn-danger btn-sm me-2"
                  id="player2Decrement"
                  style="width: 30px; height: 30px"
                >
                  -
                </button>
                <button
                  class="btn btn-primary btn-sm"
                  id="player2Increment"
                  style="width: 30px; height: 30px"
                >
                  +
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div
        class="container d-flex align-items-center justify-content-center mt-4"
      >
        <div class="card-container">
          <div class="card-body">
            <h1 class="card-title"><%- question.question %></h1>
            <p class="card-text"></p>
            <ol>
              <% answers.forEach(answer => { %>
              <li data-correct="<%= answer === question.correct_answer%>">
                <%- answer %>
              </li>
              <% }); %>
            </ol>
            <button id="show-answer" class="btn btn-primary">
              Show Answer
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/index.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
